{
  "private": true,
  "license": "UNLICENSED",
  "author": "Ross Hill <ross@rosshill.ca> (https://rosshill.ca)",
  "type": "module",
  "scripts": {
    "build": "wireit",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "checkNodeVersions": "wireit",
    "dev": "wireit",
    "format": "prettier --write  --plugin prettier-plugin-svelte .",
    "getIcons": "wireit",
    "getPosts": "wireit",
    "getWebp": "wireit",
    "postinstall": "npx playwright install",
    "lint": "wireit",
    "lint:styles": "wireit",
    "lint:ts-svelte": "wireit",
    "prepare": "svelte-kit sync",
    "preview": "wireit",
    "test": "wireit",
    "upgrade": "ncu -u -x eslint,@typescript-eslint/parser,@typescript-eslint/eslint-plugin && npm i --force"
  },
  "browserslist": "last 5 years or ie>=11 or >0.2%",
  "devDependencies": {
    "@babel/core": "^7.26.0",
    "@babel/eslint-parser": "^7.26.5",
    "@iconify/json": "^2.2.297",
    "@playwright/test": "^1.49.1",
    "@sveltejs/adapter-netlify": "^4.4.0",
    "@sveltejs/kit": "^2.7.0",
    "@types/apca-w3": "^0.1.3",
    "@types/chroma-js": "^3.1.0",
    "@types/cssnano": "^5.1.3",
    "@types/dateformat": "^5.0.3",
    "@types/imagemin": "^9.0.1",
    "@types/imagemin-webp": "^7.0.3",
    "@types/lodash-es": "^4.17.12",
    "@typescript-eslint/eslint-plugin": "^7.8.0",
    "@typescript-eslint/parser": "^7.8.0",
    "apca-w3": "0.1.9",
    "autoprefixer": "^10.4.20",
    "bezier-easing": "^2.1.0",
    "chroma-js": "^3.1.2",
    "cssnano": "^7.0.6",
    "date-fns": "^4.1.0",
    "eslint": "^8.56.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.2.2",
    "eslint-plugin-svelte": "^2.46.1",
    "eslint-plugin-unicorn": "^56.0.1",
    "hsluv-sass": "^2.0.1",
    "hsluv-ts": "^1.0.1",
    "imagemin": "^9.0.0",
    "imagemin-webp": "^8.0.0",
    "isbot": "^5.1.21",
    "lodash-es": "^4.17.21",
    "markdown-json": "^1.6.1",
    "npm-check-updates": "^17.1.14",
    "postcss-html": "^1.8.0",
    "prettier": "^3.4.2",
    "prettier-plugin-svelte": "^3.3.3",
    "sass": "^1.83.4",
    "simple-icons": "^14.2.0",
    "slugify": "^1.6.6",
    "stylelint": "^16.13.2",
    "stylelint-config-standard-scss": "^14.0.0",
    "svelte": "^5.19.0",
    "svelte-check": "^4.1.4",
    "svelte-meta-tags": "^4.1.0",
    "svelte-preprocess": "^6.0.3",
    "svelte-select": "^5.8.3",
    "svelte-wrap-balancer": "^0.0.4",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "universal-cookie": "^7.2.2",
    "unplugin-icons": "^22.0.0",
    "vite": "^5.4.9",
    "wireit": "^0.14.9",
    "xml-formatter": "^3.6.3"
  },
  "engines": {
    "node": ">= 20.15.1"
  },
  "wireit": {
    "build": {
      "command": "vite build",
      "dependencies": [
        "checkNodeVersions",
        "getIcons",
        "getWebp"
      ],
      "files": [
        "tsconfig.json",
        "package.json",
        "package-lock.json",
        ".nvmrc",
        "svelte.config.js",
        "vite.config.ts",
        "src/**/*",
        "assets/**/*"
      ],
      "output": [
        "build"
      ]
    },
    "getIcons": {
      "command": "tsx ./scripts/getIcons.ts",
      "dependencies": [
        "getPosts"
      ],
      "files": [
        "tsconfig.json",
        "package.json",
        "package-lock.json",
        ".nvmrc",
        "data/posts.json",
        "scripts/getIcons.ts"
      ],
      "output": [
        "data/tagColors.json",
        "assets/tags"
      ]
    },
    "getPosts": {
      "command": "markdown-json -c content/.mdconfig.json",
      "files": [
        "tsconfig.json",
        "package.json",
        "package-lock.json",
        ".nvmrc",
        "content/**/*"
      ],
      "output": [
        "data/posts.json"
      ]
    },
    "getWebp": {
      "command": "tsx ./scripts/getWebp.ts",
      "files": [
        "tsconfig.json",
        "package.json",
        "package-lock.json",
        ".nvmrc",
        "assets/**/*.{png,jpg,jpeg}",
        "scripts/getWebp.ts"
      ],
      "output": [
        "assets/**/*.webp"
      ]
    },
    "checkNodeVersions": {
      "command": "tsx ./scripts/checkNodeVersions.ts",
      "files": [
        "tsconfig.json",
        "package.json",
        "package-lock.json",
        ".nvmrc",
        "scripts/checkNodeVersions.ts"
      ],
      "output": []
    },
    "lint": {
      "dependencies": [
        "lint:ts-svelte",
        "lint:styles"
      ]
    },
    "lint:styles": {
      "command": "stylelint \"**/*.{css,scss,svelte}\" --ignore-path .gitignore",
      "files": [
        "tsconfig.json",
        "package.json",
        "package-lock.json",
        ".nvmrc",
        "**/*.{css,scss,svelte}",
        ".stylelintrc.json"
      ],
      "output": []
    },
    "lint:ts-svelte": {
      "command": "eslint \"**/*.{js,ts,svelte}\" --ignore-path .gitignore",
      "files": [
        "tsconfig.json",
        "package.json",
        "package-lock.json",
        ".nvmrc",
        "src/**/*.{js,ts,svelte}",
        "scripts/**/*.{js,ts,svelte}",
        "svelte.config.js",
        "vite.config.ts",
        ".eslintrc.yml"
      ],
      "output": []
    },
    "test": {
      "command": "playwright test",
      "dependencies": [
        "build"
      ],
      "output": []
    },
    "dev": {
      "command": "vite dev --port 3000",
      "dependencies": [
        "build"
      ],
      "output": []
    },
    "preview": {
      "command": "vite preview --port 3000",
      "dependencies": [
        "build"
      ],
      "output": []
    }
  }
}
