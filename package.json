{
  "name": "homepage",
  "version": "1.4.0",
  "description": "Ross Hill's homepage",
  "type": "module",
  "scripts": {
    "build": "rm -rf .svelte/ && rm -rf build && npm run contentGen && npm run webpGen && svelte-kit build",
    "contentGen": "markdown-json -c markdown-config.json",
    "dev": "svelte-kit dev",
    "export": "npm run build",
    "lint": "eslint src",
    "preview": "svelte-kit preview",
    "start": "svelte-kit start",
    "webpGen": "cd static && webpc -r && cd ..",
    "postbuild": "mv .svelte-kit/static/build/404/index.html .svelte-kit/static/build/404.html"
  },
  "devDependencies": {
    "@sveltejs/adapter-static": "1.0.0-next.15",
    "@sveltejs/kit": "1.0.0-next.151",
    "babel-eslint": "^10.1.0",
    "dateformat": "^4.5.1",
    "eslint": "^7.32.0",
    "eslint-plugin-svelte3": "^3.1.2",
    "isbot": "^3.3.1",
    "markdown-json": "^1.6.0",
    "sass": "^1.37.5",
    "slugify": "^1.6.0",
    "svelte": "3.42.1",
    "svelte-icons": "^2.1.0",
    "vite": "2.4.4",
    "webp-converter-cli": "^0.0.5"
  },
  "engines": {
    "node": ">= 14.15.4"
  }
}
