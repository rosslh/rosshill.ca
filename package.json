{
  "private": true,
  "license": "UNLICENSED",
  "author": "Ross Hill <ross@rosshill.ca> (https://rosshill.ca)",
  "type": "module",
  "scripts": {
    "build": "wireit",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "dev": "vite dev --port 3000",
    "format": "prettier --write  --plugin prettier-plugin-svelte .",
    "getIcons": "wireit",
    "getPosts": "wireit",
    "getWebp": "wireit",
    "lint": "wireit",
    "lint:ts-svelte": "wireit",
    "lint:styles": "wireit",
    "prepare": "svelte-kit sync",
    "preview": "vite preview --port 3000",
    "test": "playwright test",
    "updateNvmrc": "wireit",
    "upgrade": "ncu -u -x eslint,@typescript-eslint/parser,@typescript-eslint/eslint-plugin && npm i && npx playwright install"
  },
  "browserslist": "last 5 years or ie>=11 or >0.2%",
  "devDependencies": {
    "@babel/core": "^7.24.7",
    "@babel/eslint-parser": "^7.24.7",
    "@iconify/json": "^2.2.226",
    "@playwright/test": "^1.45.1",
    "@sveltejs/adapter-netlify": "^4.3.1",
    "@sveltejs/kit": "2.5.18",
    "@types/apca-w3": "^0.1.3",
    "@types/chroma-js": "^2.4.4",
    "@types/cssnano": "^5.0.0",
    "@types/dateformat": "^5.0.2",
    "@types/imagemin": "^9.0.0",
    "@types/imagemin-webp": "^7.0.3",
    "@types/lodash-es": "^4.17.12",
    "@typescript-eslint/eslint-plugin": "^7.8.0",
    "@typescript-eslint/parser": "^7.8.0",
    "apca-w3": "0.1.9",
    "autoprefixer": "^10.4.19",
    "bezier-easing": "^2.1.0",
    "chroma-js": "^2.4.2",
    "cssnano": "^7.0.4",
    "date-fns": "^3.6.0",
    "eslint": "^8.56.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-svelte": "^2.41.0",
    "eslint-plugin-unicorn": "^54.0.0",
    "hsluv-sass": "^2.0.1",
    "hsluv-ts": "^1.0.1",
    "imagemin": "^9.0.0",
    "imagemin-webp": "^8.0.0",
    "isbot": "^5.1.12",
    "lodash-es": "^4.17.21",
    "markdown-json": "^1.6.1",
    "npm-check-updates": "^16.14.20",
    "postcss-html": "^1.7.0",
    "prettier": "^3.3.2",
    "prettier-plugin-svelte": "^3.2.5",
    "sass": "^1.77.7",
    "simple-icons": "^13.1.0",
    "slugify": "^1.6.6",
    "stylelint": "^16.6.1",
    "stylelint-config-standard-scss": "^13.1.0",
    "svelte": "4.2.18",
    "svelte-check": "^3.8.4",
    "svelte-meta-tags": "^3.1.2",
    "svelte-preprocess": "^6.0.2",
    "svelte-select": "^5.8.3",
    "svelte-wrap-balancer": "^0.0.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.3",
    "universal-cookie": "^7.1.4",
    "unplugin-icons": "^0.19.0",
    "vite": "5.3.3",
    "wireit": "^0.14.5",
    "xml-formatter": "^3.6.3"
  },
  "engines": {
    "node": ">= 18.14.0"
  },
  "wireit": {
    "build": {
      "command": "vite build",
      "dependencies": [
        "updateNvmrc",
        "getIcons",
        "getWebp"
      ],
      "files": [
        "tsconfig.json",
        "package.json",
        ".nvmrc",
        "svelte.config.js",
        "vite.config.ts",
        "src/**/*",
        "assets/**/*"
      ],
      "output": [
        "build"
      ]
    },
    "getIcons": {
      "command": "node --loader ts-node/esm ./scripts/getIcons.ts",
      "dependencies": [
        "getPosts"
      ],
      "files": [
        "tsconfig.json",
        "package.json",
        ".nvmrc",
        "data/posts.json",
        "scripts/getIcons.ts"
      ],
      "output": [
        "data/tagColors.json",
        "assets/tags"
      ]
    },
    "getPosts": {
      "command": "markdown-json -c content/.mdconfig.json",
      "files": [
        "tsconfig.json",
        "package.json",
        ".nvmrc",
        "content/**/*"
      ],
      "output": [
        "data/posts.json"
      ]
    },
    "getWebp": {
      "command": "node --loader ts-node/esm ./scripts/getWebp.ts",
      "files": [
        "tsconfig.json",
        "package.json",
        ".nvmrc",
        "assets/**/*.{png,jpg,jpeg}",
        "scripts/getWebp.ts"
      ],
      "output": [
        "assets/**/*.webp"
      ]
    },
    "updateNvmrc": {
      "command": "node --loader ts-node/esm ./scripts/updateNvmrc.ts",
      "files": [
        "tsconfig.json",
        "package.json",
        ".nvmrc",
        "scripts/updateNvmrc.ts"
      ],
      "output": [
        ".nvmrc"
      ]
    },
    "lint": {
      "dependencies": [
        "lint:ts-svelte",
        "lint:styles"
      ]
    },
    "lint:styles": {
      "command": "stylelint \"**/*.{css,scss,svelte}\" --ignore-path .gitignore",
      "files": [
        "tsconfig.json",
        "package.json",
        ".nvmrc",
        "**/*.{css,scss,svelte}",
        ".stylelintrc.json"
      ],
      "output": []
    },
    "lint:ts-svelte": {
      "command": "eslint \"**/*.{js,ts,svelte}\" --ignore-path .gitignore",
      "files": [
        "tsconfig.json",
        "package.json",
        ".nvmrc",
        "src/**/*.{js,ts,svelte}",
        "scripts/**/*.{js,ts,svelte}",
        "svelte.config.js",
        "vite.config.ts",
        ".eslintrc.json"
      ],
      "output": []
    }
  }
}
