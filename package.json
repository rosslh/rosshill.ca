{
  "private": true,
  "license": "UNLICENSED",
  "author": "Ross Hill <ross@rosshill.ca> (https://rosshill.ca)",
  "type": "module",
  "scripts": {
    "build": "wireit",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "dev": "vite dev --port 3000",
    "format": "prettier --write  --plugin prettier-plugin-svelte .",
    "getIcons": "wireit",
    "getPosts": "wireit",
    "getWebp": "wireit",
    "lint": "wireit",
    "lint:ts-svelte": "wireit",
    "lint:styles": "wireit",
    "prepare": "svelte-kit sync",
    "preview": "vite preview --port 3000",
    "test": "playwright test",
    "updateNvmrc": "wireit",
    "upgrade": "ncu -u && npm i && npx playwright install"
  },
  "browserslist": "last 5 years or ie>=11 or >0.2%",
  "devDependencies": {
    "@babel/core": "^7.23.9",
    "@babel/eslint-parser": "^7.23.9",
    "@iconify/json": "^2.2.175",
    "@playwright/test": "^1.41.1",
    "@sveltejs/adapter-netlify": "^4.1.0",
    "@sveltejs/kit": "2.5.0",
    "@types/apca-w3": "^0.1.3",
    "@types/chroma-js": "^2.4.3",
    "@types/cssnano": "^5.0.0",
    "@types/dateformat": "^5.0.2",
    "@types/imagemin": "^8.0.5",
    "@types/imagemin-webp": "^7.0.3",
    "@types/lodash-es": "^4.17.12",
    "@typescript-eslint/eslint-plugin": "^6.19.1",
    "@typescript-eslint/parser": "^6.19.1",
    "apca-w3": "0.1.9",
    "autoprefixer": "^10.4.17",
    "bezier-easing": "^2.1.0",
    "chroma-js": "^2.4.2",
    "cssnano": "^6.0.3",
    "date-fns": "^3.3.1",
    "eslint": "^8.56.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.1.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-svelte": "^2.35.1",
    "eslint-plugin-unicorn": "^50.0.1",
    "hsluv-sass": "^2.0.1",
    "hsluv-ts": "^1.0.1",
    "imagemin": "^8.0.1",
    "imagemin-webp": "^8.0.0",
    "isbot": "^4.4.0",
    "lodash-es": "^4.17.21",
    "logrocket": "^7.0.0",
    "markdown-json": "^1.6.1",
    "npm-check-updates": "^16.14.14",
    "postcss-html": "^1.6.0",
    "prettier": "^3.2.4",
    "prettier-plugin-svelte": "^3.1.2",
    "sass": "^1.70.0",
    "simple-icons": "^11.2.0",
    "slugify": "^1.6.6",
    "stylelint": "^16.2.0",
    "stylelint-config-standard-scss": "^13.0.0",
    "svelte": "4.2.9",
    "svelte-check": "^3.6.3",
    "svelte-meta-tags": "^3.1.0",
    "svelte-preprocess": "^5.1.3",
    "svelte-select": "^5.8.3",
    "svelte-wrap-balancer": "^0.0.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "universal-cookie": "^7.0.1",
    "unplugin-icons": "^0.18.3",
    "vite": "5.0.12",
    "wireit": "^0.14.4",
    "xml-formatter": "^3.6.2"
  },
  "engines": {
    "node": ">= 18.14.0"
  },
  "wireit": {
    "build": {
      "command": "vite build",
      "dependencies": [
        "updateNvmrc",
        "getIcons",
        "getWebp"
      ],
      "files": [
        "tsconfig.json",
        "package.json",
        "svelte.config.js",
        "vite.config.ts",
        "src/**/*",
        "assets/**/*"
      ],
      "output": [
        "build"
      ]
    },
    "getIcons": {
      "command": "node --loader ts-node/esm ./scripts/getIcons.ts",
      "dependencies": [
        "getPosts"
      ],
      "files": [
        "tsconfig.json",
        "package.json",
        "data/posts.json",
        "scripts/getIcons.ts"
      ],
      "output": [
        "data/tagColors.json",
        "assets/tags"
      ]
    },
    "getPosts": {
      "command": "markdown-json -c content/.mdconfig.json",
      "files": [
        "tsconfig.json",
        "package.json",
        "content/**/*"
      ],
      "output": [
        "data/posts.json"
      ]
    },
    "getWebp": {
      "command": "node --loader ts-node/esm ./scripts/getWebp.ts",
      "files": [
        "tsconfig.json",
        "package.json",
        "assets/**/*.{png,jpg,jpeg}",
        "scripts/getWebp.ts"
      ],
      "output": [
        "assets/**/*.webp"
      ]
    },
    "updateNvmrc": {
      "command": "node --loader ts-node/esm ./scripts/updateNvmrc.ts",
      "files": [
        "tsconfig.json",
        "package.json",
        "scripts/updateNvmrc.ts"
      ],
      "output": [
        ".nvmrc"
      ]
    },
    "lint": {
      "dependencies": [
        "lint:ts-svelte",
        "lint:styles"
      ]
    },
    "lint:styles": {
      "command": "stylelint \"**/*.{css,scss,svelte}\" --ignore-path .gitignore",
      "files": [
        "tsconfig.json",
        "package.json",
        "**/*.{css,scss,svelte}",
        ".stylelintrc.json"
      ],
      "output": []
    },
    "lint:ts-svelte": {
      "command": "eslint \"**/*.{js,ts,svelte}\" --ignore-path .gitignore",
      "files": [
        "tsconfig.json",
        "package.json",
        "src/**/*.{js,ts,svelte}",
        "scripts/**/*.{js,ts,svelte}",
        "svelte.config.js",
        "vite.config.ts",
        ".eslintrc.json"
      ],
      "output": []
    }
  }
}
