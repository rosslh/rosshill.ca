{
  "private": true,
  "license": "UNLICENSED",
  "author": "Ross Hill <ross@rosshill.ca> (https://rosshill.ca)",
  "type": "module",
  "scripts": {
    "build": "wireit",
    "build:test": "APP_ENV=test npm run build",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "dev": "vite dev --port 3000",
    "getIcons": "wireit",
    "getPosts": "markdown-json -c content/.mdconfig.json",
    "getWebp": "node --loader ts-node/esm ./scripts/getWebp.ts",
    "lint": "eslint . --ignore-path .gitignore",
    "preview": "vite preview --port 3000",
    "test": "playwright test",
    "upgrade": "ncu -u --reject apca-w3 && npm i",
    "updateNvmrc": "node --loader ts-node/esm ./scripts/updateNvmrc.ts"
  },
  "wireit": {
    "getIcons": {
      "command": "node --loader ts-node/esm ./scripts/getIcons.ts",
      "dependencies": [
        "getPosts"
      ]
    },
    "build": {
      "command": "vite build",
      "dependencies": [
        "updateNvmrc",
        "getIcons",
        "getWebp"
      ]
    }
  },
  "browserslist": "last 5 years or ie>=11 or >0.2%",
  "devDependencies": {
    "@babel/core": "^7.21.8",
    "@babel/eslint-parser": "^7.21.8",
    "@iconify/json": "^2.2.66",
    "@playwright/test": "^1.33.0",
    "@sveltejs/adapter-netlify": "^2.0.7",
    "@sveltejs/kit": "1.18.0",
    "@types/apca-w3": "^0.1.0",
    "@types/chroma-js": "^2.4.0",
    "@types/cssnano": "^5.0.0",
    "@types/dateformat": "^5.0.0",
    "@types/imagemin": "^8.0.1",
    "@types/imagemin-webp": "^7.0.0",
    "@types/lodash-es": "^4.17.7",
    "@typescript-eslint/eslint-plugin": "^5.59.6",
    "@typescript-eslint/parser": "^5.59.6",
    "apca-w3": "0.1.2",
    "autoprefixer": "^10.4.14",
    "chroma-js": "^2.4.2",
    "cssnano": "^6.0.1",
    "date-fns": "^2.30.0",
    "eslint": "^8.40.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-svelte3": "^4.0.0",
    "hsluv-sass": "^2.0.1",
    "hsluv-ts": "^1.0.1",
    "imagemin": "^8.0.1",
    "imagemin-webp": "^8.0.0",
    "isbot": "^3.6.10",
    "lodash-es": "^4.17.21",
    "markdown-json": "^1.6.1",
    "npm-check-updates": "^16.10.12",
    "sass": "^1.62.1",
    "simple-icons": "^8.14.0",
    "slugify": "^1.6.6",
    "svelte": "3.59.1",
    "svelte-check": "^3.3.2",
    "svelte-meta-tags": "^2.7.2",
    "svelte-preprocess": "^5.0.3",
    "svelte-wrap-balancer": "^0.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4",
    "universal-cookie": "^4.0.4",
    "unplugin-icons": "^0.16.1",
    "vite": "4.3.7",
    "wireit": "^0.9.5"
  },
  "engines": {
    "node": ">= 18.14.0"
  }
}
